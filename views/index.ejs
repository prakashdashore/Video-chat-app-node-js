<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <link rel="stylesheet" href="../styles/style.css">

    <title>Let's Video Chat</title>
    <style>
      .pop__up{
        position: absolute;
        width: 500px;
        height: 100px;
        background-color: white;
        top: 30%;
        left: 25%;
        padding:10px 10px;
        display: none;
        transition: 1s all;

      }
      #inp{
        color: blue;
        padding: 10px;
        /* margin-left: 10px; */
        width: 400px;
        height: 50px;
        border-radius: 20px;

      }
      #btn{
        border-radius: 20px;
        /* margin-left: 30px; */
        border: none;
        font-size:20px;
        padding: 10px 20px;

      }
      #btn:hover{
        background:rgb(194, 186, 186);

      }
    </style>
  </head>
  <body>
    <div class="main">
      <div class="left">
        
        <div class="pop__up">
          <label>Joining Link</label>
          <div>
            <input type="text" id="inp" value=""  >
          <button id="btn" >
            <i class="fa-regular fa-copy"></i>
          </button>
          </div>
          

        </div>

        <div class="main__videos">
          <div id="video-grid">
    
          </div>
       </div>
       <div class="main__controls">
          <div class="main__controls__block">
             <div class="main__controls__button main__mute_button">
                <i class="fas fa-microphone"></i>
                <span>Mute</span>
             </div>
             <div class="main__controls__button main__video_button" >
                <i class="fas fa-video"></i>
                <span>Stop Video</span>
             </div>
          </div>
          
          <div class="main__controls__block">
            <div id="add__participants" class="main__controls__button">
              <i class="fa-sharp fa-solid fa-user-plus"></i>
              <span>Add Participants</span>
           </div>
             <div  class="main__controls__button">
              <a style="text-decoration: none; color: white;" href="/profile">
                <span class="leave_meeting">Leave Meeting</span>

              </a>

             </div>
          </div>
       </div>
      </div>
      <div class="right">
        <div class="main__right">
          <div class="main__header">
             <h6>Chat Room</h6>
          </div>
          <div class="main__chat_window">
             <ul class="messages">
              
                
             </ul>
            
 
          </div>
          <div class="main__message_container">
             <input style="outline: none; font-size: 20px;" id="chat_message" type="text" placeholder="Type message here...">
          </div>
       </div>


      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.socket.io/4.6.0/socket.io.min.js"
      integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+"
      crossorigin="anonymous"
    ></script>

    <script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>

    <script>
      var roomId = "<%= roomId %>";
      console.log("this is my roomId", roomId);
      const addParticipant = document.getElementById("add__participants")
      const input = document.getElementById("inp")
      const btn = document.getElementById("btn");
      const popo = document.querySelector(".pop__up");

      var flag = 0;
      addParticipant.addEventListener("click",e =>{
        input.value = window.location.href
        if(flag ===0){
          popo.style.display = "initial"
          flag = 1;
        }
        else{
          popo.style.display = "none"
          flag = 0;

        

        }
      })
       
      btn.addEventListener("click", e =>{
        input.select()
        document.execCommand("copy");
        window.getSelection().removeAllRanges()
        setTimeout( function(){
          popo.style.display = "none"
        },2000)
      })



    </script>

    <script src="../scripts/client.js"></script>
  </body>
</html>
